<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ABC4F4">

    <Button
        android:id="@+id/buttonMain"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/left"
        app:layout_constraintEnd_toStartOf="@+id/sacuvaj"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tLimit" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="108dp"
        android:layout_height="30dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="255dp"
        android:text="Budget:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/budzet"
        android:layout_width="264dp"
        android:layout_height="42dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="156dp"
        android:background="#76AAE1"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="108dp"
        android:layout_height="30dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="315dp"
        android:text="Month limit:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/mLimit"
        android:layout_width="198dp"
        android:layout_height="59dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="223dp"
        android:background="#76AAE1"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="108dp"
        android:layout_height="30dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="255dp"
        android:text="Total limit:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mLimit" />

    <EditText
        android:id="@+id/tLimit"
        android:layout_width="200dp"
        android:layout_height="59dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="163dp"
        android:background="#76AAE1"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="219dp"
        android:layout_height="62dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="108dp"
        android:text="My Account"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sacuvaj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="52dp"
        android:background="#76AAE1"
        android:text="SAVE"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/graphs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tLimit" />

    <Button
        android:id="@+id/graphs"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="308dp"
        android:background="@drawable/right"
        app:layout_constraintStart_toEndOf="@+id/sacuvaj"
        app:layout_constraintTop_toBottomOf="@+id/budzet" />
</androidx.constraintlayout.widget.ConstraintLayout>